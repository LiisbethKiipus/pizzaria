<?xml version="1.0"?>
<ruleset name="Laravel Standards">
    <rule ref="PSR12"/>
    <arg name="colors"/>
    <arg name="tab-width" value="4"/>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="180"/>
            <property name="absoluteLineLimit" value="180"/>
        </properties>
    </rule>

    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>
    <file>tests</file>
</ruleset> 